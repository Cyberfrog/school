doctype html
html
 head
  title Student Summary
  link(rel='stylesheet', href='/stylesheets/style.css')  
 body
  h1 Student Summary
  p
   form(action="/updateStudent/#{id}" method="POST")
    div Name: 
     input(name="student_name" type="text" value='#{name}')
    div Grade:
     select(name="grade")
      each grade in allGrades
       option(value="#{grade.id}") #{grade.name} 
    div
     table(border="4")
      tr
       th Subject
       th Max
       th Score
      each subject in subjects
       tr
        td
         a(href="/subjects/#{subject.id}") #{subject.name}
        td #{subject.maxScore}
        td 
         input(name="score_#{subject.id}" type="number" value ="#{subject.score}" min="0" max="#{subject.maxScore}")
    p   
     input(type="submit" value="sbumit")